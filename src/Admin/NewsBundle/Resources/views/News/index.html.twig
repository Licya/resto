{# src/Admin/NewsBundle/views/News/index.html.twig#}
{% extends '::base.html.twig' %}
{% set itemName = 'News' %}
{% block title %} Liste des {{itemName}} {% endblock %}
{% block pagetitle %}Liste des {{itemName}}{% endblock %}
{% block bodyContent %} 
    <table class="u-full-width">
        <thead>
            <tr>
                <th id="center_align">Titre</th>
                <th id="center_align">Publi√©e</th>
                <th id="center_align">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for News in news %}
                <tr>
                    <td id="center_align">{{News.title}}</td>
                    <td id="center_align">{%if News.enable == 1%}
                        oui
                    {%else%}
                        non
                        {%endif%}
                    </td>
                    <td id="center_align">
                            <a href="{{ path('admin_news_edit',
                                            {'id' : News.id},
                                            {'title': News.title},
                                            {'subtitle': News.subtitle},
                                            {'description': News.description},
                                            {'enable':News.enable},
                                            {'sort':News.sort}
                           )}}">
                                <img class="edit" src="{{ asset('images/edit.png') }}" alt="modifier"/>
                            </a>
                            &nbsp;
                            <a  href="{{ path('admin_news_delete',{'id' : News.id})}}">
                                <img class="delete" src="{{ asset('images/delete.png') }}" alt="supprimer"/>
                            </a>
                        </td>
                    </tr>
                </tbody>
                {% endfor %}
                </table>
                {% endblock %}
                    {% block addBtn %} 
                        <a class="button u-max-full-width" id="btn_add" href="{{ path('admin_news_add')}}">Ajouter une {{itemName}} </a>
                    {% endblock %}
