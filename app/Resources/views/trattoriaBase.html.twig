{# app/Resources/views/trattoriaBase.twig #}
<!DOCTYPE html>
<html>
    <head>
        {% block menta %}
            <meta http-quiv="Content-Type" content=" text/html; charset=UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1">
        {% endblock %}
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/css/trattoria.css')}}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/css/skeleton.css')}}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/css/normalize.css')}}" type="text/css" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body>       
        <div class="{% block image %} {% endblock %}">
            <div class="container" id="container">
            {% block header %}{% endblock %}
                <div class="row">
                    <div class="four columns">
                        <img src="../../../web/images/logo.jpg" alt="logo" width=""/>
                        {% block navigation %}{% endblock %}
                    </div>
                    <div class="eight columns">
                        {% block pageTitle %}{% endblock %}
                        {% block content %}{% endblock %}
                     </div>
                </div>
                <div id="footer">
                    <hr>
                    {% block footer %}&copy;Trattoria d'Italia-2015{% endblock %}
                </div>
          </div>
        </div>
    </body>
</html>